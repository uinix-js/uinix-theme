{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["es2020"],
    "moduleResolution": "nodenext",
    "module": "es2020",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020"
  },
  "exclude": ["coverage", "node_modules", "test"],
  "include": ["**/*.js", "declaration.d.ts"],
}
